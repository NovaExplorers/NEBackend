{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",

    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",

    "moduleResolution": "node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@config/*": ["config/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"]
    },

  },
  "include": ["src/**/*"],
  "plugins": [
    {
      "transform": "@zerollup/ts-transform-paths",
    }
  ],
}